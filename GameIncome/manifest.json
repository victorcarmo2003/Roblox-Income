{
  "manifest_version": 3,
  "name": "Roblox Game Income Estimator",
  "version": "1.96",
  "description": "Estimates monthly income of Roblox games based on active players.",
  "permissions": ["activeTab", "scripting"],
  "icons": {
    "48": "icons/money.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/money.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
